<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <link name="gripper_base_link">
        <visual>
            <geometry>
                <box size="0.75 0.75 0.02"/>
            </geometry>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <material name="dark_green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.75 0.75 0.02"/>
            </geometry>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
        </collision>
    </link>

    <link name="gripper_left_finger_link">
        <visual>
            <geometry>
                <box size="0.02 0.55 3.0"/>
            </geometry>
            <origin xyz="0 0 1.5" rpy="0 0 0"/>
            <material name="light_green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.55 3.0"/>
            </geometry>
            <origin xyz="0 0 1.5" rpy="0 0 0"/>
        </collision>
    </link>

    <link name="gripper_right_finger_link">
        <visual>
            <geometry>
                <box size="0.02 0.55 3.0"/>
            </geometry>
            <origin xyz="0 0 1.5" rpy="0 0 0"/>
            <material name="light_green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.02 0.55 3.0"/>
            </geometry>
            <origin xyz="0 0 1.5" rpy="0 0 0"/>
        </collision>
    </link>

    <joint name="gripper_left_finger_joint" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_left_finger_link"/>
        <origin xyz="-0.375 0 0.02" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.375" effort="1000.0" velocity="1.0"/>
    </joint>

    <joint name="gripper_right_finger_joint" type="prismatic">
        <parent link="gripper_base_link"/>
        <child link="gripper_right_finger_link"/>
        <origin xyz="0.375 0 0.02" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <mimic joint="gripper_left_finger_joint" multiplier="-1.0"/>
        <limit lower="-0.375" upper="0.0" effort="1000.0" velocity="1.0"/>
    </joint>

</robot>